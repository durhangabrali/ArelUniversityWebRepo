@model Candidate

<div>
    <h3 class="display-4">Tebrikler @Model.FullName</h3>
    <p class="lead">Başvurunuz alınmıştır. İlginiz için teşekkür ederiz.</p>
    <hr/>
    <blockquote class="blockquote">
        @Model.SelectedCourse için başvuru yaptınız.
    </blockquote>
    <p class="text-muted">@Model.ApplyAt de başvurdunuz.</p>
     
     <div class="btn-group">
         <a class="btn btn-outline-success" asp-action="Index" asp-controller="Course">Başvuru Listesi</a>
         <a class="btn btn-success" asp-action="Index" asp-controller="Home">Anasayfa</a>
     </div>

</div>