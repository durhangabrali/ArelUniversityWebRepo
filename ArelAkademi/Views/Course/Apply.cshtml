@model Candidate

<div class="display-6">
     Kurs Başvuru Formu
</div>

<form action="/cource/apply" method="post">
   
   <div class="form-group my-2">
       <label>E-Posta</label>
       <input name="Email" class="form-control"/>
   </div>

   <div class="form-group my-2">
       <label>Ad</label>
       <input name="FirstName" class="form-control"/>
   </div>

   <div class="form-group my-2">
       <label>Soyad</label>
       <input name="LastName" class="form-control"/>
   </div>

   <div class="form-group my-2">
       <label>Yaş</label>
       <select name="Age" class="form-control">
          <option value="18">18</option>
          <option value="19">19</option>
          <option value="20">20</option>
          <option value="21">21</option>
          <option value="22">22</option>
          <option value="23">23</option>
       </select>
   </div>

   <fieldset>
       <legend>Bir kurs seçiniz</legend>
       <p>
           <input id="mvc" type="radio" name="SelectedCourse" value="ASP.NET Core MVC"/>
           <label>ASP.NET Core MVC</label>
       </p>
       <p>
           <input id="api" type="radio" name="SelectedCourse" value="ASP.NET Core API"/>
           <label>ASP.NET Core API</label>
       </p>
       <p>
           <input id="csharp" type="radio" name="SelectedCourse" value="C#"/>
           <label>C#</label>
       </p>
   </fieldset>

   <div>
      <button class="btn btn-primary" type="submit">Başvur</button>
   </div>

</form>